<% include partials/header %>

<div class="hero">
<p class="status">FORTNITE SERVER STATUS:
   <% if(status===true){ %>
    <span class="statusUp">
        UP AND RUNNING
    </span>
   <% } else { %>
       <span>
        DOWN
    </span>
  <% } %>
    
</p>

<h1>FORTNITE BATTLE ROYALE STATS</h1>



<div class="ui container">
    <div class="ui form">
         <form action="/stats" method="get">
            <div class="fields">
                  <div class="eight wide field">
               <div class="ui icon input focus">
        <i class="search icon"></i>
            <input type="text" placeholder="User Name" name="user">
        </div>   
            </div>
  
        <div class="ui input focus">
            <input type="text" placeholder="Platform" name="platform">
        </div>
            </div>
          

        
    <button type="submit" class="ui blue button">Go</button>
</form> 
    </div>
  
</div>

</div>




<div class="ui two column equal width stackable grid">
<div class="streched row">
    
    <div class="ten wide column">
<div class="ui segment raised">
    <div class="ui divided items dark">
    <h2 class="section">NEWS!</h2>
   <% news.forEach((article)=>{ %>
    <div class="item">
        <div class="ui image">
            <img src="<%=article.image%>" alt="">
        </div>
        <div class="content">
            <h3 class="newsTitle header"><%=article.title%></h3>
        
        <div class="description">
             <p><%=article.body%></p>
        </div>
        </div>
        
       
    </div>
        
  <%  }) %>

    </div>   
</div>
</div>
<div class="six wide column">
    <div class="dark ui segment raised">
        <h2>Leaderboards (PC)</h2>
        <div class="solo">
            <h3>SOLO</h3> 
        </div>    
        <ol>
    <% leaderboard.forEach((leader)=>{ %>
    <% if(leader.rank <= 10) { %>
            <li><%=leader.displayName%></li>
    <%  } %>
        <%  }) %>
            </ol>
        </div>
    </div>
</div>
</div>
</div>
<% include partials/footer %>